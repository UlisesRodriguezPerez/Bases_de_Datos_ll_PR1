@model List<model.entity.Subastas>
@{
    ViewBag.Title = "Categorías";
}


<div class="container">
    <table class="table ">
        <tr class="btn-primary">
            <th>Id Usuario Actual</th>
            <th>IdCategoria</th>
            <th>IdSubCategoria</th>
            <th>NombreCategoria</th>
            <th>NombreSubCategoria</th>


        </tr>
        @foreach (var subasta in Model)
        {
    <tr>
        <td>@subasta.IdUsuarioActual</td>
        <td>@subasta.IdCategoria</td>
        <td>@subasta.IdSubCategoria</td>
        <td>@subasta.NombreCategoria</td>
        <td>@subasta.NombreSubCategoria</td>

        <td>

            @using (Html.BeginForm("filtarSubastas", "Subasta"))
            {
                <label>Usuario Id</label>
                <input type="number" name="idusuario" value="@subasta.IdUsuarioActual" />


                <input type="number" name="idSubCategoria" value="@subasta.IdSubCategoria" /> @*style="display: none" />*@


                <input type="number" name="id" value="" style="display: none" />

                <button type="submit">Ver Subastas Activas</button>
            }

        </td>

    </tr>
        }
    </table>
</div>

