@model List<model.entity.Subastas>
@{
    ViewBag.Title = "Categorías";
}


<div class="container">
    <table class="table ">
        <tr class="btn-primary">
            <th>Id Usuario Actual</th>
            <th>Id</th>
            <th>Nombre</th>



        </tr>
        @foreach (var subasta in Model)
        {
    <tr>
        <td>@subasta.IdUsuarioActual</td>
        <td>@subasta.IdCategoria</td>
        <td>@subasta.NombreCategoria</td>

        <td>

            @using (Html.BeginForm("SubCategoria", "Subasta"))
            {
                <label>Usuario Id</label>
                <input type="number" name="idusuario" value="@subasta.IdUsuarioActual" />


                <input type="number" name="idcategoria" value="@subasta.IdCategoria" /> @*style="display: none" />*@


                <input type="number" name="id" value="" style="display: none" />

                <button type="submit">Ver Sub-Categorías</button>
            }

        </td>
        <td><a class="btn btn-success" href="~/Subasta/SubCategoria/@subasta.IdCategoria">NO USAR</a></td>

    </tr>
        }
    </table>
</div>

